<section class="section-sm">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8  mb-5 mb-lg-0">
  <h2 class="h5 section-title">Recent Post</h2>


  <!-- Start of the Blog Card -->
  <%  post.forEach(post => { %>
  <article class="card mb-4">
  <div class="post-slider">
    <% if (post.img && post.img.contentType && post.img.data) { %>
      <img src="data:image/<%= post.img.contentType %>;base64,
          <%= post.img.data.toString('base64') %>" class="card-img-top" alt="post-thumb">
    <% } else { %>
      <img src="" class="card-img-top" alt="default-thumb">
    <% } %>
  </div>
  <div class="card-body">
      <h3 class="mb-3"><a class="post-title" href=""><%=post.title %></a></h3>
      <ul class="card-meta list-inline">
      <li class="list-inline-item">
          <a href="" class="card-meta-author">
          Category: <span><%=post.category %></span>
          </a>
      </li>
      
      <li class="list-inline-item">
          <i class="ti-calendar"></i> Posted on: 
          <%= new Date(post.createdAt).toLocaleDateString() %>
      </li>
      <li class="list-inline-item">
          <ul class="card-meta-tag list-inline">
            <% post.keywords.split(',').forEach(function(keyword) { %>
              <li class="list-inline-item"><a href=""><%= keyword.trim() %></a></li>
            <% }); %>
        
          </ul>
      </li>
      </ul>
      <p><%=post.description %></p>
      <a href="/postdetails/<%= post._id %>" class="btn btn-outline-primary">Read More</a>
  </div>
  </article>
  <% });%>


  <!-- End of the Blog Card -->

  
